deathsbymonth %>%
  ggplot(mapping = aes(x=FECHA_FALLECIMIENTO,y=n))+
  geom_line(color="black") +
  theme_minimal()+
  labs(x="",y="Número de fallecimientos",
       title = "Número de fallecimientos por día en el departamento de Lima",
       caption = "Fuente: MINSA - Elaboración propia")

datacovid %>%
  filter(DEPARTAMENTO=="LIMA") %>%
  group_by(FECHA_RESULTADO) %>% 
  summarise(n=n()) %>%
  ggplot()+
  geom_line(aes(x=FECHA_RESULTADO ,y=n) ,color="red") +
  theme_minimal()+
  labs(x="",y="Número de casos",
       title = "Número de casos por día en el departamento de Lima",
       caption = "Fuente: MINSA - Elaboración propia")+
  geom_line(data = deathsbymonth,aes(x=FECHA_FALLECIMIENTO ,y=n) ,color="black")
